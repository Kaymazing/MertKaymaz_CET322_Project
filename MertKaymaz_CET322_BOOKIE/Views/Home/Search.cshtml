@model MertKaymaz_CET322_BOOKIE.ViewModel.SearchViewModel
@{
    ViewData["Title"] = "Search";
}

<h1>Search</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div class="form-group">
                <label asp-for="SearchText" class="control-label"></label>
                <input asp-for="SearchText" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="SearchInDescription" /> Search in description.
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                    <option value="">All Categories</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn-primary" />
            </div>
        </form>
    </div>

</div>
@if (Model?.Results != null)
{<h3>Results</h3>
 <h5>@Model.Results.Count books found.</h5>
    <div class="row">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Page Count
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Minimum Price
                    </th>
                    <th>
                        Offer Price
                    </th>
                    <th>
                        Press Year
                    </th>
                    <th>
                        Condition 
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Results)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PageCount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Authors)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfferPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PressYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Condition)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Id)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


